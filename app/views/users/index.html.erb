<center>
<table>
  <tr>
    <th>Email</th>
    <th colspan="3"></th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <% if current_user %>
      <td><%= link_to 'Destroy', user_path(user),
        method: :delete, data: { confirm: 'Are you sure you wish to delete this?' } %></td>
      <% end %>
    </tr>
  <% end %>
  </table>
</center>