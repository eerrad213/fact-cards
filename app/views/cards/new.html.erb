<center>
<h1>New Card Fact</h1>

<%= form_for :card, url: cards_path do |f| %>

  <p>
    <%= f.label :subject %>
    <%= f.text_field :subject %>

    <%= f.label :content %>
    <%= f.text_field :content %>
  </p>
 
  <p>
    <%= f.label :fact %><br>
    <%= f.text_area :fact %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>

  <p>
    <%= f.label :references %><br>
    <%= f.text_field :references %>
  </p>
<% end %>
</center>