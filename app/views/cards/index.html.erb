<%= paginate @cards %>

<h1>Listing Cards</h1>

<table>
  <tr>
    <th>Subject</th>
    <th>Content</th>
    <th colspan="3"></th>
  </tr>
  
    <% if @cards.empty? %>
      <td class="noposts">No Cards available</td>
    <% else %>

    <% @cards.each do |card| %>
      <tr>
        <td><%= card.subject %></td>
        <td><%= card.content %></td>
        <td><%= link_to 'Show', card_path(card) %></td>
        <% if current_user %>
        <td><%= link_to 'Edit', edit_card_path(card) %></td>
        <td><%= link_to 'Destroy', card_path(card),
          method: :delete, data: { confirm: 'Are you sure you wish to delete this?' } %></td>
        <% end %>
      </tr>
    <% end %>
  <% end %>
</table>

